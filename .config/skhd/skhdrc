# move yabai window

# left
alt + shift - h : yabai -m window --swap west
ctrl + shift - h : yabai -m window --focus west

# up
alt + shift - k : yabai -m window --swap north
ctrl + shift - k : yabai -m window --focus north

#right
alt + shift - l : yabai -m window --swap east
ctrl + shift - l : yabai -m window --focus east

# down
alt + shift - j : yabai -m window --swap south
ctrl + shift - j : yabai -m window --focus south

# space 1
cmd + alt - 1 : yabai -m window --space 1
cmd - 1 : yabai -m space --focus 1

# space 2
cmd + alt - 2 : yabai -m window --space 2
cmd - 2 : yabai -m space --focus 2

# space 3
cmd + alt - 3 : yabai -m window --space 3
cmd - 3 : yabai -m space --focus 3

# space 4
cmd + alt - 4 : yabai -m window --space 4
cmd - 4 : yabai -m space --focus 4

# space 5 
cmd + alt - 5 : yabai -m window --space 5
cmd - 5 : yabai -m space --focus 5

# space 6
cmd + alt - 6 : yabai -m window --space 6
cmd - 6 : yabai -m space --focus 6

# space 7
cmd + alt - 7 : yabai -m window --space 7
cmd - 7 : yabai -m space --focus 7

# space 8
cmd + alt - 8 : yabai -m window --space 8
cmd - 8 : yabai -m space --focus 8

# toggle window tiling
ctrl + shift - p : yabai -m window --toggle float

# toggle topmost
ctrl + shift - o : yabai -m window --toggle topmost

# toggle topmost
ctrl + shift - u : yabai -m window --toggle sticky

# toggle full screen
ctrl + shift - m : yabai -m window --toggle zoom-fullscreen

# toggle full screen
ctrl + shift - n : yabai -m window --toggle zoom-parent

# toggle layout  split type
ctrl + shift - i : yabai -m window --toggle split

# rotate space 90
ctrl + shift - y : yabai -m space --rotate 90

# balance windows
ctrl + shift - b : yabai -m space --balance

# toggle resize
ctrl + cmd - h : yabai -m window west --resize right:-20:0 2> /dev/null || yabai -m window --resize right:-20:0
ctrl + cmd - j : yabai -m window north --resize bottom:0:20 2> /dev/null || yabai -m window --resize bottom:0:20
ctrl + cmd - k : yabai -m window south --resize top:0:-20 2> /dev/null || yabai -m window --resize top:0:-20
ctrl + cmd - l : yabai -m window east --resize left:20:0 2> /dev/null || yabai -m window --resize left:20:0


